<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundDashboard"
    tools:context="eu.omnitracs.add.poc.cameraScanner.CropActivity"
    tools:ignore="MergeRootFrame" >

    <eu.omnitracs.add.poc.cameraScanner.CropView
        android:id="@+id/image_preview"
        
        android:layout_width="700dp"
        android:layout_height="wrap_content" 
        android:layout_gravity="left"/>
    <!-- 
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:layout_gravity="left"/> -->

    <TableLayout
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button_crop"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"           
                android:text="@string/button_crop"
                android:textSize="@dimen/font_size_medium" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button_new_picture"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/button_new_picture"
                android:textSize="@dimen/font_size_medium" />
        </TableRow>
    </TableLayout>

</FrameLayout>